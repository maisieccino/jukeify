{
  "name": "jukeify",
  "version": "0.1.0",
  "scripts": {
    "precommit": "yarn run lint:staged",
    "lint": "eslint src --ext .js --ext .jsx --cache --ignore-path .gitignore",
    "lint:force": "eslint src --ext .js --ext .jsx --ignore-path .gitignore",
    "lint:staged": "lint-staged",
    "format": "prettier --write --trailing-comma all src/**/*.{js,jsx}",
    "postinstall": "cd app && yarn install",
    "start": "node start.js",
    "start-app": "cd app && start",
    "start-server": "node server.js",
    "storybook": "cd app && yarn run storybook"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "concurrently": "^3.5.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "nodemon": "^1.12.5",
    "prettier": "^1.9.2"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write --trailing-comma all",
      "git add"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "dotenv": "^4.0.0",
    "grant-koa": "^3.8.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.3.0",
    "koa-session": "^5.5.1",
    "koa-static": "^4.0.2"
  }
}
